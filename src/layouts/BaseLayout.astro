import SchemaOrganization from '@components/SEO/SchemaOrganization.astro';
import SchemaBreadcrumb from '@components/SEO/SchemaBreadcrumb.astro';

interface Props {
  title: string;
  description: string;
  keywords?: string[];
  ogImage?: string;
  breadcrumbs?: Array<{name: string; url: string}>;
  canonical?: string;
}

const { 
  title, 
  description, 
  keywords = [],
  ogImage = '/og-dubai.jpg',
  breadcrumbs = [],
  canonical
} = Astro.props;

const siteUrl = 'https://dubai.obsidianprivate.capital';
const fullTitle = `${title} | Dubai Real Estate Investment`;
const canonicalUrl = canonical || `${siteUrl}${Astro.url.pathname}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{fullTitle}</title>
  
  <meta name="description" content={description}>
  {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')}>}
  <meta name="author" content="Obsidian Private Capital">
  <link rel="canonical" href={canonicalUrl}>
  
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`${siteUrl}${ogImage}`}>
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`}>
  
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  
  <SchemaOrganization />
  {breadcrumbs.length > 0 && <SchemaBreadcrumb items={breadcrumbs} />}
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    :root {
      --color-primary: #1a1a2e;
      --color-secondary: #16213e;
      --color-accent: #0f3460;
      --color-gold: #c4a747;
      --color-text: #2c3e50;
      --color-text-light: #7f8c8d;
      --color-bg: #ffffff;
      --color-bg-alt: #f8f9fa;
      --max-width: 1400px;
      --spacing-xs: 0.5rem;
      --spacing-sm: 1rem;
      --spacing-md: 2rem;
      --spacing-lg: 4rem;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      line-height: 1.6;
      color: var(--color-text);
      background: var(--color-bg);
    }
    
    .container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 var(--spacing-md);
    }
    
    h1, h2, h3, h4, h5, h6 {
      line-height: 1.2;
      margin-bottom: var(--spacing-sm);
      color: var(--color-primary);
    }
    
    h1 { font-size: 2.5rem; font-weight: 700; }
    h2 { font-size: 2rem; font-weight: 600; }
    h3 { font-size: 1.5rem; font-weight: 600; }
    
    p {
      margin-bottom: var(--spacing-sm);
    }
    
    a {
      color: var(--color-accent);
      text-decoration: none;
    }
    
    a:hover {
      text-decoration: underline;
    }
    
    .answer-block {
      background: var(--color-bg-alt);
      border-left: 4px solid var(--color-gold);
      padding: var(--spacing-md);
      margin: var(--spacing-md) 0;
      border-radius: 4px;
    }
    
    .answer-block p {
      font-size: 1.1rem;
      line-height: 1.8;
      max-width: 65ch;
    }
  </style>
</head>
<body>
  <nav class="main-nav">
    <div class="container">
      <a href="/" class="brand">Dubai Real Estate Investment</a>
      <div class="nav-links">
        <a href="/developers">Developers</a>
        <a href="/projects">Projects</a>
        <a href="/investment-analysis">Investment Analysis</a>
        <a href="https://globalrealestateinvestment.obsidianprivate.capital">All Markets</a>
      </div>
    </div>
  </nav>
  
  <slot />
  
  <footer class="main-footer">
    <div class="container">
      <p>&copy; 2026 Obsidian Private Capital. All rights reserved.</p>
      <div class="footer-links">
        <a href="https://obsidianprivate.capital">Obsidian Private Capital</a>
        <a href="https://globalrealestateinvestment.obsidianprivate.capital">Global Markets</a>
      </div>
    </div>
  </footer>
</body>
</html>

<style>
  .main-nav {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-sm) 0;
    border-bottom: 3px solid var(--color-gold);
  }
  
  .main-nav .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .brand {
    font-size: 1.25rem;
    font-weight: 700;
    color: white !important;
  }
  
  .nav-links {
    display: flex;
    gap: var(--spacing-md);
  }
  
  .nav-links a {
    color: white !important;
    font-weight: 500;
  }
  
  .main-footer {
    background: var(--color-secondary);
    color: white;
    padding: var(--spacing-lg) 0;
    margin-top: var(--spacing-lg);
  }
  
  .main-footer .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .footer-links {
    display: flex;
    gap: var(--spacing-md);
  }
  
  .footer-links a {
    color: var(--color-gold) !important;
  }
</style>
