interface Props {
  question: string;
  answer: string;
  id?: string;
}

const { question, answer, id } = Astro.props;
const answerId = id || question.toLowerCase().replace(/[^a-z0-9]+/g, '-');
---

<div class="answer-block" id={answerId}>
  <h3 class="question">{question}</h3>
  <p class="answer">{answer}</p>
</div>

<style>
  .answer-block {
    background: #f8f9fa;
    border-left: 4px solid #d4af37;
    padding: 2rem;
    margin: 2rem 0;
    border-radius: 4px;
  }
  
  .question {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a2e;
    margin-bottom: 1rem;
  }
  
  .answer {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #2c3e50;
    max-width: 65ch;
  }
</style>
